{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "description": "Returns the current balance of the given address, and asset_name. Default is zero. Return Type: Balance response",
      "type": "object",
      "required": [
        "balance"
      ],
      "properties": {
        "balance": {
          "type": "object",
          "required": [
            "address",
            "asset_name"
          ],
          "properties": {
            "address": {
              "type": "string"
            },
            "asset_name": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns registered information of asset_name Return type: AssetInfoValidated",
      "type": "object",
      "required": [
        "asset_info"
      ],
      "properties": {
        "asset_info": {
          "type": "object",
          "required": [
            "asset_name"
          ],
          "properties": {
            "asset_name": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  ]
}
